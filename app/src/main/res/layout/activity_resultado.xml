<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_resultado">

    <TextView
        android:id="@+id/tvDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="102dp"
        android:hint="Datos"
        app:layout_constraintStart_toStartOf="@+id/btnConvertirBinario"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConvertirBinario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Convertir a Binario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDatos" />

    <TextView
        android:id="@+id/tvBinario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="55dp"
        android:hint="BINARIO"
        app:layout_constraintStart_toStartOf="@+id/btnConvertirBinario"
        app:layout_constraintTop_toBottomOf="@+id/btnConvertirBinario" />

    <Button
        android:id="@+id/btAvanzar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avanzar"
        android:onClick="btAvanzar1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBinario"
        app:layout_constraintVertical_bias="0.09" />
</androidx.constraintlayout.widget.ConstraintLayout>